name = Contour
description = Multipurpose Creative Drupal Theme. 
core = 7.x
engine = phptemplate
version = 1.0

; Call style sheets.
stylesheets[all][] = css/imports.css

; Call JavaScript libraries.
scripts[] = js/libs/gumby.min.js
scripts[] = js/libs/modernizr-2.0.6.min.js
scripts[] = js/easing.js
scripts[] = js/masonry.js
scripts[] = includes/twitter/jquery.tweet.js
scripts[] = js/jquery.ui.totop.js
scripts[] = js/plugins.js
scripts[] = js/mobile-menu.js
scripts[] = js/main.js

; Define Header block regions.
regions[header_branding_left] = Header Branding Left
regions[header_branding_right] = Header Branding Right
regions[header_menu_left] = Header Menu Left
regions[header_menu_right] = Header Menu Right

; Define content block regions.
regions[before_content_no_wrapper] = Before Content No Wrapper
regions[before_content] = Before Content
regions[content] = Content
regions[sidebar_left] = Left Sidebar
regions[sidebar_right] = Right Sidebar
regions[after_content] = After Content
regions[after_content_no_wrapper] = After Content No Wrapper

; Define Footer block regions.
regions[footer_col_1] = Footer Column 1
regions[footer_col_2] = Footer Column 2
regions[footer_col_3] = Footer Column 3
regions[footer_col_4] = Footer Column 4
regions[footer_bottom_left] = Footer Bottom Left
regions[footer_bottom_right] = Footer Bottom Right

; Define theme setting defaults.
settings[color_scheme] = 'white_black'